<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background6"
    android:layout_height="match_parent"
    tools:context=".camera">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Abstract"
        android:text="Project Idea"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center"/>




    <Button
        android:id="@+id/change"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/Abstract"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:onClick="changeF"
        android:text="Change Image"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/track"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:onClick="trackF"
        android:layout_below="@id/change"
        android:text="Track Movement"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/profilebtn"
        android:onClick="profileF"
        android:text="Profile"
        android:layout_below="@id/track"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:backgroundTint="#FFFFFF"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/Logout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilebtn"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:onClick="logoutF"
        android:text="Logout"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />


</RelativeLayout>